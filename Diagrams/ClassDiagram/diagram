@startuml

class Users {
    - UserRepository : IUserRepository
    + Login()
    + CreateUser()
    + UpdateUser()
    + RetrieveCurrentUserDetails()
    + DeleteUser()
}

class Accounts {
    - AccountRepository : IAccountRepository
    + CreateAccount()
    + GetAllAccounts()
    + GetAccount()
    + UpdateAccount()
    + DeleteAccount()
}

class Invites {
    - InvitesRepository : IInvitesRepository
    + SendInvite()
    + GetAccountInvites()
    + GetInvite()
    + GetAllSentInvites()
    + DeleteSentInvite()
    + RespondToInvite()
}

class Transactions {
    - TransactionRepository : ITransactionRepository
    + CreateTransaction()
    + GetAllTransactions()
    + GetTransaction()
    + UpdateTransaction()
    + DeleteTransaction()
    + Search()
}

class RepeatingTransactions {
    - RepTransactionRepository : IRepTransactionRepository
    + CreateRepeatingTransaction()
    + GetAllTransactionsForRepeatingTransaction()
    + GetAllRepeatingTransactions()
    + GetRepeatingTransaction()
    + UpdateRepeatingTransaction()
    + DeleteRepeatingTransaction()
}

class UserAccess {
    - UserAccessRepository : IUserAccessRepository
    + GetAllUsersForAccount()
    + UpdateUserRole()
    + RevokeAccess()
}

class Reports {
    - TransactionRepository : ITransactionRepository
    - RepTransactionRepository : IRepTransactionRepository
    - AccountRepository : IAccountRepository
    + GenerateReport()
}

@enduml